    if (wallet_url){
      window.location = discovery_info.credential_request_url;
      return false;
    }
    else{
      var pageEl = document.getElementById("page")
      pageEl.setAttribute("style", "display: block");
      siop_set_img(discovery_info);
    }
  }
</script>

